@page
@model IndexModel
@{
    ViewData["Title"] = "Profil";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<h3>@ViewData["Title"]</h3>
<partial name="_StatusMessage" for="StatusMessage" />
<div class="row">
    <div class="col-md-6">
        <form id="profile-form" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

            <div class="form-floating mb-3">
                <input asp-for="Username" class="form-control" placeholder="Kullanıcı adınız." disabled />
                <label asp-for="Username" class="form-label">Kullanıcı Adı (E-posta)</label>
            </div>

            <div class="form-floating mb-3">
                <input asp-for="Input.PhoneNumber" class="form-control" placeholder="Lütfen telefon numaranızı girin." />
                <label asp-for="Input.PhoneNumber" class="form-label">Telefon Numarası</label>
                <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
            </div>

            <hr />
            <h5 class="mt-3">Şirket Bilgileri (PDF için)</h5>
            <small class="text-muted d-block mb-2">Buradaki bilgiler, oluşturacağınız PDF tekliflerde "Teklifi Veren" kısmında kullanılacaktır.</small>

            <div class="form-floating mb-3">
                <input asp-for="Input.CompanyName" class="form-control" placeholder="Şirket Unvanı" />
                <label asp-for="Input.CompanyName" class="form-label"></label>
                <span asp-validation-for="Input.CompanyName" class="text-danger"></span>
            </div>

            <div class="form-floating mb-3">
                <input asp-for="Input.CompanyAddress" class="form-control" placeholder="Şirket Adresi" />
                <label asp-for="Input.CompanyAddress" class="form-label"></label>
                <span asp-validation-for="Input.CompanyAddress" class="text-danger"></span>
            </div>

            <div class="form-floating mb-3">
                <input asp-for="Input.CompanyTaxOffice" class="form-control" placeholder="Vergi Dairesi" />
                <label asp-for="Input.CompanyTaxOffice" class="form-label"></label>
                <span asp-validation-for="Input.CompanyTaxOffice" class="text-danger"></span>
            </div>

            <div class="form-floating mb-3">
                <input asp-for="Input.CompanyTaxNumber" class="form-control" placeholder="Vergi Numarası" />
                <label asp-for="Input.CompanyTaxNumber" class="form-label"></label>
                <span asp-validation-for="Input.CompanyTaxNumber" class="text-danger"></span>
            </div>

            <div class="form-floating mb-3">
                <input asp-for="Input.CompanyIBAN" class="form-control" placeholder="IBAN" />
                <label asp-for="Input.CompanyIBAN" class="form-label"></label>
                <span asp-validation-for="Input.CompanyIBAN" class="text-danger"></span>
            </div>

            <hr />
            <h5 class="mt-3">Yetkili Bilgileri (PDF İmza Alanı)</h5>

            <div class="form-floating mb-3">
                <input asp-for="Input.ContactFullName" class="form-control" placeholder="Yetkili Adı Soyadı" />
                <label asp-for="Input.ContactFullName" class="form-label"></label>
                <span asp-validation-for="Input.ContactFullName" class="text-danger"></span>
            </div>

            <div class="form-floating mb-3">
                <input asp-for="Input.ContactTitle" class="form-control" placeholder="Yetkili Unvanı" />
                <label asp-for="Input.ContactTitle" class="form-label"></label>
                <span asp-validation-for="Input.ContactTitle" class="text-danger"></span>
            </div>

            <button id="update-profile-button" type="submit" class="w-100 btn btn-lg btn-primary mt-3">Kaydet</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}