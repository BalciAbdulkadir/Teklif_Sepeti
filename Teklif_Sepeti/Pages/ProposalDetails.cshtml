@page "{id:int?}"
@model Teklif_Sepeti.Pages.ProposalDetailsModel
@{
    ViewData["Title"] = "Teklif Detayı";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-4">
            <div class="sticky-top" style="top: 20px;">
                <div class="card shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title">@Model.Proposal.ProposalNumber</h5>
                        <p class="card-text">
                            Aşağıdaki teklif detaylarını inceleyebilir ve PDF olarak indirebilirsiniz.
                        </p>
                        <div class="d-grid gap-2">
                            <form method="post" asp-page-handler="DownloadPdfAsync" asp-route-id="@Model.Proposal.Id" class="d-inline-block">
                                <button type="submit" class="btn btn-outline-primary">
                                    <i class="bi bi-file-earmark-pdf"></i> PDF İndir
                                </button>
                            </form>
                            <a asp-page="/Index" class="btn btn-outline-primary">
                                &larr; Listeye Geri Dön
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-8">
            <div class="card mb-4 shadow-sm">
                <div class="card-header fw-bold">Müşteri Bilgileri</div>
                <div class="card-body">
                    <h5>@Model.Proposal.CustomerName</h5>
                    <p class="mb-1"><strong>Adres:</strong> @Model.Proposal.CustomerAddress</p>
                    <p class="mb-1"><strong>E-posta:</strong> @Model.Proposal.CustomerEmail</p>
                    <hr>
                    <p class="mb-1"><strong>Teklif Tarihi:</strong> @Model.Proposal.IssueDate.ToShortDateString()</p>
                    <p class="mb-0"><strong>Geçerlilik Tarihi:</strong> @Model.Proposal.ExpiryDate.ToShortDateString()</p>
                </div>
            </div>

            <div class="card mb-4 shadow-sm">
                <div class="card-header fw-bold">Teklif Kalemleri</div>
                <div class="card-body">
                    <table class="table">
                        <thead class="table-light">
                            <tr>
                                <th>Açıklama</th>
                                <th>Miktar</th>
                                <th>Birim Fiyat</th>
                                <th>Satır Toplamı</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.Proposal.Items)
                            {
                                <tr>
                                    <td>@item.Name</td>
                                    <td>@item.Quantity</td>
                                    <td>@item.UnitPrice.ToString("C", new System.Globalization.CultureInfo("tr-TR"))</td>
                                    <td>@item.CalculatedSubtotal.ToString("C", new System.Globalization.CultureInfo("tr-TR"))</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>

            <div class="row">
                <div class="col-md-7">
                    <div class="card shadow-sm">
                        <div class="card-header fw-bold">Notlar</div>
                        <div class="card-body">
                            <p class="text-muted">
                                @(string.IsNullOrEmpty(Model.Proposal.Notes) ? "Ek not bulunmamaktadır." : Model.Proposal.Notes)
                            </p>
                        </div>
                    </div>
                </div>
                <div class="col-md-5">
                    <ul class="list-group shadow-sm">
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            Ara Toplam
                            <span>@Model.Proposal.TotalSubtotal.ToString("C", new System.Globalization.CultureInfo("tr-TR"))</span>
                        </li>
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            Toplam KDV
                            <span>@Model.Proposal.TotalVATAmount.ToString("C", new System.Globalization.CultureInfo("tr-TR"))</span>
                        </li>
                        <li class="list-group-item d-flex justify-content-between align-items-center fw-bold h5">
                            GENEL TOPLAM
                            <span class="text-success">@Model.Proposal.TotalGrandTotal.ToString("C", new System.Globalization.CultureInfo("tr-TR"))</span>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>