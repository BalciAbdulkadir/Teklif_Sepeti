@page "{id:int?}"
@model Teklif_Sepeti.Pages.ProposalDetailsModel
@{
    ViewData["Title"] = "Teklif Detayı";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h1>Teklif: @Model.Proposal.ProposalNumber</h1>
        <p class="lead text-muted">Müşteri: @Model.Proposal.CustomerName</p>
    </div>
    <div>
        <a asp-page="/ProposalList" class="btn btn-outline-secondary btn-sm">
            &larr; Listeye Geri Dön
        </a>

        <form method="post" asp-page-handler="DownloadPdf" asp-route-id="@Model.Proposal.Id" class="d-inline">
            <button type="submit" class="btn btn-outline-success btn-sm">
                PDF İndir
            </button>
        </form>
    </div>
</div>

<hr />

<div class="row">
    <div class="col-md-8">

        <div class="card mb-3">
            <div class="card-header">Müşteri Bilgileri</div>
            <div class="card-body">
                <p><strong>Müşteri:</strong> @Model.Proposal.CustomerName</p>
                <p><strong>E-posta:</strong> @(Model.Proposal.CustomerEmail ?? "N/A")</p>
                <p><strong>Adres:</strong> @(Model.Proposal.CustomerAddress ?? "N/A")</p>
            </div>
        </div>

        <div class="card">
            <div class="card-header">Teklif Kalemleri</div>
            <div class="table-responsive">
                <table class="table align-middle mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>Açıklama</th>
                            <th>Miktar</th>
                            <th>Birim Fiyat</th>
                            <th>KDV (%)</th>
                            <th class="text-end">Ara Toplam</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Proposal.Items)
                        {
                            <tr>
                                <td>@item.Name</td>
                                <td>@item.Quantity</td>
                                <td>@item.UnitPrice.ToString("C")</td>
                                <td>%@item.VATRate</td>
                                <td class="text-end">@item.CalculatedSubtotal.ToString("C")</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card mb-3">
            <div class="card-header">Teklif Özeti</div>
            <ul class="list-group list-group-flush">
                <li class="list-group-item d-flex justify-content-between">
                    <span>Ara Toplam</span>
                    <strong>@Model.Proposal.TotalSubtotal.ToString("C")</strong>
                </li>
                <li class="list-group-item d-flex justify-content-between">
                    <span>Toplam KDV</span>
                    <strong>@Model.Proposal.TotalVATAmount.ToString("C")</strong>
                </li>
                <li class="list-group-item d-flex justify-content-between bg-light">
                    <h5 class="mb-0">Genel Toplam</h5>
                    <h5 class="mb-0">@Model.Proposal.TotalGrandTotal.ToString("C")</h5>
                </li>
            </ul>
        </div>

        <div class="card">
            <div class="card-header">Ek Notlar</div>
            <div class="card-body">
                <p class="fst-italic">
                    @(Model.Proposal.Notes ?? "Ek not belirtilmemiş.")
                </p>
            </div>
        </div>
    </div>
</div>