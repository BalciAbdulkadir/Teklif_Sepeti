@page
@model Teklif_Sepeti.Pages.ProposalListModel
@{
    ViewData["Title"] = "Tüm Tekliflerim";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1>@ViewData["Title"]</h1>
    <a asp-page="/CreateProposal" class="btn btn-primary">
        + Yeni Teklif Oluştur
    </a>
</div>

@if (!string.IsNullOrEmpty(Model.StatusMessage))
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @Model.StatusMessage
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}


@if (Model.Proposals.Any())
{
    <div class="card">
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead class="table-light">
                    <tr>
                        <th>Teklif No</th>
                        <th>Müşteri Adı</th>
                        <th>Düzenlenme Tarihi</th>
                        <th>Genel Toplam</th>
                        <th class="text-end">İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Proposals)
                    {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.ProposalNumber)</td>
                            <td>@Html.DisplayFor(modelItem => item.CustomerName)</td>
                            <td>@item.IssueDate.ToShortDateString()</td>
                            <td>@item.TotalGrandTotal.ToString("C")</td>
                            <td class="text-end">

                                <a asp-page="/ProposalDetails" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary">
                                    Detaylar
                                </a>

                                <form asp-page="/ProposalDetails" asp-page-handler="DownloadPdf" asp-route-id="@item.Id" method="post" class="d-inline">
                                    <button type="submit" class="btn btn-sm btn-outline-success">
                                        PDF
                                    </button>
                                </form>

                                <form method="post" asp-page-handler="Delete" asp-route-id="@item.Id" class="d-inline" onsubmit="return confirm('Bu teklifi silmek istediğinizden emin misiniz? Bu işlem geri alınamaz.');">
                                    <button type="submit" class="btn btn-sm btn-outline-danger">
                                        Sil
                                    </button>
                                </form>

                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
}
else
{
    <div class="alert alert-info">
        Görüntülenecek kayıtlı bir teklif bulunamadı.
        Hemen <a asp-page="/CreateProposal" class="alert-link">yeni bir teklif oluşturabilirsiniz</a>.
    </div>
}