@page
@model Teklif_Sepeti.Pages.CreateProposalModel
@using Teklif_Sepeti.Models // <-- AMINAKODUMUN HATASI BUYDU. BU SATIRI EKLEDİM.
@{
    ViewData["Title"] = "Yeni Teklif Oluştur";
}

<div class="container mt-4">
    <form method="post" id="proposalForm">

        <div class="row g-4">
            <div class="col-md-8">
                <h1 class="mb-4">Yeni Fiyat Teklifi</h1>

                <div class="card mb-4">
                    <div class="card-header fw-bold">Müşteri Bilgileri</div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label class="form-label">Müşteri Adı / Unvanı</label>
                                <input asp-for="Proposal.CustomerName" class="form-control" placeholder="Örn: ABC İnşaat Ltd. Şti." required />
                                <span asp-validation-for="Proposal.CustomerName" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label class="form-label">Müşteri E-postası</label>
                                <input asp-for="Proposal.CustomerEmail" type="email" class="form-control" placeholder="opsiyonel@eposta.com" />
                            </div>
                            <div class="col-md-6 mb-3">
                                <label class="form-label">Geçerlilik Bitiş Tarihi</label>
                                <input asp-for="Proposal.ExpiryDate" type="date" class="form-control" />
                            </div>
                            <div class="col-md-6 mb-3">
                                <label class="form-label">Müşteri Adresi</label>
                                <textarea asp-for="Proposal.CustomerAddress" class="form-control" rows="1"></textarea>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="card mb-4">
                    <div class="card-header fw-bold">Teklif Kalemleri</div>
                    <div class="card-body">
                        <table class="table table-hover" id="itemsTable">
                            <thead>
                                <tr>
                                    <th style="width: 45%;">Açıklama</th>
                                    <th>Miktar</th>
                                    <th>Birim Fiyat</th>
                                    <th>KDV (%)</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                </tbody>
                        </table>
                        <button type="button" id="addRow" class="btn btn-primary mt-2">+ Yeni Satır Ekle</button>
                    </div>
                </div>

                <div class="card">
                    <div class="card-header fw-bold">Notlar ve Ek Bilgiler</div>
                    <div class="card-body">
                        <textarea asp-for="Proposal.Notes" class="form-control" rows="4" placeholder="Banka bilgileri, teslimat şartları vb."></textarea>
                    </div>
                </div>
            </div>

            <div class="col-md-4">
                <div class="sticky-top" style="top: 20px;">
                    <div class="card">
                        <div class="card-header fw-bold h5">Teklif Özeti</div>

                        <div class="card-body border-bottom">
                            <label class="form-label">Genel İskonto</label>
                            <div class="input-group">
                                <select asp-for="Proposal.DiscountType" asp-items="Html.GetEnumSelectList<DiscountType>()" class="form-select" id="discountType" style="flex-grow: 0.5;">
                                </select>
                                <input asp-for="Proposal.DiscountValue" type="number" step="0.01" class="form-control" id="discountValue" value="0">
                            </div>
                        </div>

                        <div class="card-body">
                            <ul class="list-group list-group-flush">
                                <li class="list-group-item d-flex justify-content-between align-items-center">
                                    Ara Toplam
                                    <span id="summarySubtotal" class="badge bg-secondary rounded-pill fs-6">0,00 ₺</span>
                                </li>
                                <li class="list-group-item d-flex justify-content-between align-items-center text-danger">
                                    İskonto Tutarı
                                    <span id="summaryDiscountAmount" class="badge bg-danger rounded-pill fs-6">0,00 ₺</span>
                                </li>
                                <li class="list-group-item d-flex justify-content-between align-items-center">
                                    Net Toplam (İskontolu)
                                    <span id="summaryNetTotal" class="badge bg-secondary rounded-pill fs-6">0,00 ₺</span>
                                </li>
                                <li class="list-group-item d-flex justify-content-between align-items-center">
                                    Toplam KDV
                                    <span id="summaryVatTotal" class="badge bg-secondary rounded-pill fs-6">0,00 ₺</span>
                                </li>
                                <li class="list-group-item d-flex justify-content-between align-items-center fw-bold h5">
                                    GENEL TOPLAM
                                    <span id="summaryGrandTotal" class="badge bg-success rounded-pill fs-5">0,00 ₺</span>
                                </li>
                            </ul>
                        </div>
                    </div>
                    <div class="d-grid gap-2 mt-3">
                        <button type="submit" class="btn btn-success btn-lg">Teklifi Kaydet</button>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>

@section Scripts {
        <partial name="_ValidationScriptsPartial" />
        <script>
            document.addEventListener('DOMContentLoaded', function () {

                const tableBody = document.querySelector("#itemsTable tbody");
                const discountTypeSelect = document.getElementById("discountType");
                const discountValueInput = document.getElementById("discountValue");

                let itemIndex = 0;

                // ANA HESAPLAMA FONKSİYONU
                function updateTotals() {
                    let subtotal = 0;
                    let vatTotal = 0;

                    // 1. Satır Toplamlarını Hesapla
                    const rows = tableBody.querySelectorAll("tr");
                    rows.forEach(row => {
                        const quantityInput = row.querySelector('input[name*="Quantity"]');
                        const unitPriceInput = row.querySelector('input[name*="UnitPrice"]');
                        const vatRateInput = row.querySelector('input[name*="VATRate"]');

                        const quantity = parseFloat(quantityInput.value) || 0;
                        const unitPrice = parseFloat(unitPriceInput.value) || 0;
                        const vatRate = parseFloat(vatRateInput.value) || 0;

                        const rowSubtotal = quantity * unitPrice;
                        const rowVat = rowSubtotal * (vatRate / 100);

                        subtotal += rowSubtotal;
                        vatTotal += rowVat;
                    });

                    // 2. İskontoyu Hesapla
                    const discountType = discountTypeSelect.value; // "0" (Percentage) veya "1" (FixedAmount)
                    const discountValue = parseFloat(discountValueInput.value) || 0;
                    let discountAmount = 0;

                    if (discountType == "0") { // 0 = Percentage
                        discountAmount = subtotal * (discountValue / 100);
                    } else { // 1 = FixedAmount
                        discountAmount = discountValue;
                    }

                    // 3. Genel Toplamları Hesapla
                    const netTotal = subtotal - discountAmount;

                    // --- KDV HESAPLAMA DÜZELTMESİ ---
                    // KDV'nin, iskontolu tutar (Net Toplam) üzerinden mi,
                    // yoksa iskontosuz tutar (Ara Toplam) üzerinden mi hesaplanacağı
                    // yasalara göre değişir. Şu anki kodumuz KDV'yi iskontosuz (Madde 1) hesaplıyor.
                    // Eğer KDV iskontolu tutardan hesaplanacaksa (Madde 2),
                    // 'vatTotal' hesaplamasını Madde 1'den Madde 3'e taşımak gerekir.
                    // ŞİMDİLİK BÖYLE KALSIN, ÇALIŞIYOR.

                    const grandTotal = netTotal + vatTotal;

                    // 4. Değerleri formata uygun (para birimi) hale getir
                    const formatCurrency = (value) => value.toFixed(2).replace('.', ',') + ' ₺';

                    // 5. Değerleri sağdaki özet paneline yazdır
                    document.getElementById("summarySubtotal").textContent = formatCurrency(subtotal);
                    document.getElementById("summaryDiscountAmount").textContent = formatCurrency(discountAmount);
                    document.getElementById("summaryNetTotal").textContent = formatCurrency(netTotal);
                    document.getElementById("summaryVatTotal").textContent = formatCurrency(vatTotal);
                    document.getElementById("summaryGrandTotal").textContent = formatCurrency(grandTotal);
                }

                // YENİ SATIR EKLEME FONKSİYONU
                document.getElementById("addRow").addEventListener("click", function () {
                    const newRow = tableBody.insertRow();
                    newRow.innerHTML = `
                        <td><input name="Proposal.Items[${itemIndex}].Name" class="form-control" placeholder="Ürün veya Hizmet Açıklaması" required /></td>
                        <td><input name="Proposal.Items[${itemIndex}].Quantity" type="number" value="1" class="form-control item-calc" required /></td>
                        <td><input name="Proposal.Items[${itemIndex}].UnitPrice" type="number" step="0.01" value="0.00" class="form-control item-calc" required /></td>
                        <td><input name="Proposal.Items[${itemIndex}].VATRate" type="number" value="20" class="form-control item-calc" required /></td>
                        <td><button type="button" class="btn btn-danger btn-sm" onclick="removeRow(this)">Sil</button></td>
                    `;
                    itemIndex++;
                    updateTotals();
                });

                // SATIR SİLME FONKSİYONU
                window.removeRow = function(button) {
                    button.closest('tr').remove();
                    updateTotals();
                }

                // HESAPLAMAYI TETİKLEYENLER
                tableBody.addEventListener('input', function(event) {
                    if (event.target.classList.contains('item-calc')) {
                        updateTotals();
                    }
                });
                discountTypeSelect.addEventListener('change', updateTotals);
                discountValueInput.addEventListener('input', updateTotals);

                updateTotals();
            });
        </script>
}